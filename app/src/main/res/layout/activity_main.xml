<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mealme.mariahwang.com.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/logameal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onLogMealClick"
            android:text="@string/log_a_meal" />

        <Button
            android:id="@+id/oldMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="30dp"
            android:onClick="onHistoryClick"
            android:text="@string/view_previous_meals" />

        <TextView
            android:id="@+id/monsterText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hungryMonster" />

        <ImageView
            android:id="@+id/monster"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
